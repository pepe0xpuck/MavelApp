<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.characterDetails.CharacterDetailsActivity">

    <ImageView android:layout_width="match_parent"
               android:layout_height="0dp"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toTopOf="@id/text_view_character_details_character_name"
               android:id="@+id/image_view_character_details_character_image"
               android:contentDescription="@null"
               android:background="@color/colorPrimaryDark"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintBottom_toTopOf="@id/text_view_character_details_character_description"
              android:id="@+id/text_view_character_details_character_name"
              android:textStyle="bold"
              tools:text="Teste"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layout_constraintBottom_toBottomOf="parent"
              android:id="@+id/text_view_character_details_character_description"
              tools:text="Teste"/>

</android.support.constraint.ConstraintLayout>